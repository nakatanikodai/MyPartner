
<style>
body{
  background: linear-gradient(-45deg, rgba(0, 255, 76, 0.8), rgba(136, 255, 0, 0.8)) fixed, url(https://cdn.pixabay.com/photo/2016/01/19/17/41/friends-1149841__480.jpg) fixed;
  background-size: cover;
  
}
</style>


<body>
  <div class="container">
  <br><h2>ユーザー編集 <!--<%= resource_name.to_s.humanize %>--></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div><br>

      <div class="field">
        <%= f.label :現在使用しているパスワード %> <br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div><br>


      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :新しく使用するパスワード %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> 文字以上で入力して下さい</em>
        <% end %>
      </div><br>

      <div class="field">
        <%= f.label :もう一度入力して下さい %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>


      <div class="actions">
        <%= f.submit "更新する" %>
      </div><br>
    <% end %>

    <h3>アカウントの削除</h3>

    <p><%= button_to "削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    <br>
    <!--<%= link_to "戻る", :back %>-->
  </div>
</body>
