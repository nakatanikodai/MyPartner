  <header>
    <style>
  .header{
  background: linear-gradient(-45deg, rgba(0, 255, 76, 0.8), rgba(136, 255, 0, 0.8)) fixed, url(https://cdn.pixabay.com/photo/2016/01/19/17/41/friends-1149841__480.jpg) fixed;
  background-size: cover;
}

h1 {
  background: linear-gradient(-45deg, rgba(0, 255, 76, 0.8), rgba(136, 255, 0, 0.8)) fixed, url(https://cdn.pixabay.com/photo/2016/01/19/17/41/friends-1149841__480.jpg) fixed;
  background-size: cover;
}

p {
  font-size: 20px;
  
}

</style>

<h1 class=" container-fluid display-5 text-light" >
<%= form_with(url: search_posts_path, local: true, method: :get, class: "search-form col-md-6 ") do |form| %>
  <%= link_to "My Partner", posts_path %>
  <div class="row input-group">
    <div class="col-md-10">
      <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input  form-control" %>
    </div>
    <div class="col-md-2">
      <%= form.submit "検索", class: "search-btn btn btn-default btn-success mb-4 mr-5 col-md- " %>
    </div>
<% end %>
  </div>




  <div class="display-5 mt-3">
    <% if user_signed_in? %>
      <%= link_to"ログアウト", destroy_user_session_path, method: :delete, class: "text-light btn btn-success" %>
      <%= link_to"新規投稿", new_post_path, class: "text-light btn btn-success" %>
      <button type="button" class=" btn btn-secondary dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          その他
      </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <%= link_to current_user.nickname, user_path(current_user), class: "header__right--btn" %><br><br>
    <%= link_to "アカウントページ",edit_user_registration_path %>
  </div>
    <% else %>
      <%= link_to "ログイン", new_user_session_path, class: "text-light btn btn-success "%>
      <%= link_to"新規登録", new_user_registration_path, class: "text-light btn btn-success" %>
    <% end %>

    
      
        
  </div>
  
  </header>
  <body>
    <%= yield %>
  </body>


</h1>




