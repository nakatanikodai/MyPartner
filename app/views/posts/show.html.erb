

<style>
  body {
  background: linear-gradient(-45deg, rgba(0, 255, 76, 0.8), rgba(136, 255, 0, 0.8)) fixed, url(https://cdn.pixabay.com/photo/2016/01/19/17/41/friends-1149841__480.jpg) fixed;
  background-size: cover;
}
</style>

<body>
  <div class="container-fluid mb-5">
    <div class="row">
      <div class="col">
        <div class="card img-thumbnail">
          <img class="card-img-top" src="https://pakutaso.cdn.rabify.me/shared/img/thumb/AMEMAN130019.jpg?d=500" alt="">
          <div class="card-body px-2 py-3">
            <label for="partner" class="display-4 font-weight-bold text-success">タイトル</label><br>
            <h5 class="card-title display-5"><%= @post.title%></h5>
            <p class="card-text">
              <label for="partner" class="display-4 font-weight-bold text-success">パートナー名</label><br>
            <p class="card-text font-weight-bold">
              <%= @post.partner%>
            <p class="card-text">
            <label for="partner" class="display-4 font-weight-bold text-success">コメント</label><br>
            <p class="card-text font-weight-bold">
              <%= simple_format @post.content%>

            <div>
              <%= link_to "編集", edit_post_path(@post.id) %>
              <%= link_to "削除", post_path(@post.id), method: :delete %>
            </div>

            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

<footer>
  <%= render 'shared/footer'%>
</footer>
















