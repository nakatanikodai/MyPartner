

<style>
  body {
  background: linear-gradient(-45deg, rgba(0, 255, 76, 0.8), rgba(136, 255, 0, 0.8)) fixed, url(https://cdn.pixabay.com/photo/2016/01/19/17/41/friends-1149841__480.jpg) fixed;
  background-size: cover;
}

.test{
  width: 200px;
  height: 300px;
  text-align: center;
  margin-left: 200px;
}

.image{
  width: 100%;
  height: 100%;
}
</style>

<body>
  <div class="container-fluid mb-5">
    <div class="row">
      <div class="col">
        <div class="card img-thumbnail">
          <div class="test">
            <%= image_tag @post.image.to_s, class: "image" %>
        </div>
        <div class="card-body px-2 py-3">
          <label for="partner" class="display-4 font-weight-bold text-success">タイトル</label><br>
          <h5 class="card-title display-5"><%= @post.title%></h5>
          <p class="card-text">
            <label for="partner" class="display-4 font-weight-bold text-success">パートナー名</label><br>
          <p class="card-text font-weight-bold">
            <%= @post.partner%>
          <p class="card-text">
          <label for="partner" class="display-4 font-weight-bold text-success">コメント</label><br>
          <p class="card-text font-weight-bold">
            <%= simple_format @post.content%>

      <div class="display-5">
        <% if user_signed_in? && current_user.id == @post.user_id %>
          <%= link_to "編集", edit_post_path(@post.id) %>
          <%= link_to "削除", post_path(@post.id), method: :delete %>
      
        <% end %>
      </div>

            </p>
          </div>
        </div>
      </div>
  </div>
  </div>

  <div class="card img-thumbnail ml-5 mr-5 mb-5">
    <div class="row">
      <div class="col-md-12">
        <% if current_user %>
          <%= form_with(model: [@post, @comment], local: true) do |form| %>
            <%= form.text_area :detail, placeholder: "コメントする", rows: "2", class: "col-md-12" %>
            <%= form.submit "コメント送信" %>
          <% end %>
        <% else %>
          <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
        <% end %>
      </div>
    </div>
  </div><br>

  <div class="card img-thumbnail ml-5 mr-5 mb-5">
      <h4>＜コメント一覧＞</h4>
      <h5 class="display-5">コメントの削除はカスタマーセンターまでご連絡下さい</h5>
      <% if @comments %>
        <% @comments.each do |comment| %>
          <p>
            <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
            <%= comment.detail %>
          </p>
        <% end %>
      <% end %>
  </div>
</body>

<footer>
  <%= render 'shared/footer'%>
</footer>


