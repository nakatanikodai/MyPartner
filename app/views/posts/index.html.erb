<div container>
  <div class="row mx-2">
  <% @posts.each do |post| %>
    <div class="col-4 mb-4">
     
      <div class="card img-thumbnail">
       <%= post.image %>
        
        <div class="card-body px-2 py-3">
          <h5 class="card-title"><%= link_to post.title, post_path(post.id), class: "content__right__top--title" %></h5>
          <p class="card-text"><%= post.content%></p>
        
          <p class="mb-0"><%=link_to "のぞいてみる", post_path(post.id), class: "btn btn-success btn-sm"%>
        </div>
      </div>   
    </div>
    <% end %>
  </div>

  <div>
    <%= paginate @posts %>
  </div>
